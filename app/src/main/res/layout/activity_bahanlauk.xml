<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/toolbar_utama" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:columnCount="2">

                <ImageView
                    android:id="@+id/ayam_utama"
                    android:layout_width="203dp"
                    android:layout_height="203dp"
                    android:src="@drawable/ayam_utama"
                    app:layout_column="0"
                    app:layout_row="0"
                    android:onClick="pindahLauk_Ayam"
                    />

                <ImageView
                    android:id="@+id/telur_utama"
                    android:layout_width="203dp"
                    android:layout_height="203dp"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:srcCompat="@drawable/telur_utama"
                    android:onClick="pindahLauk_Telur" />

                <ImageView
                    android:id="@+id/tahu_utama"
                    android:layout_width="203dp"
                    android:layout_height="203dp"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:srcCompat="@drawable/tahu_utama"
                    android:onClick="pindahLauk_Tahu" />

                <ImageView
                    android:id="@+id/ikan_utama"
                    android:layout_width="203dp"
                    android:layout_height="203dp"
                    app:layout_column="1"
                    app:layout_row="1"
                    app:srcCompat="@drawable/ikan_utama"
                    android:onClick="pindahLauk_Ikan" />

                <ImageView
                    android:id="@+id/daging_utama"
                    android:layout_width="203dp"
                    android:layout_height="203dp"
                    app:srcCompat="@drawable/daging_utama"
                    android:onClick="pindahLauk_Daging" />

                <ImageView
                    android:id="@+id/udang_utama"
                    android:layout_width="203dp"
                    android:layout_height="203dp"
                    app:srcCompat="@drawable/udang_utama"
                    android:onClick="pindahLauk_Udang" />

                <ImageView
                    android:id="@+id/cumi_utama"
                    android:layout_width="203dp"
                    android:layout_height="203dp"
                    app:srcCompat="@drawable/cumi_utama"
                    android:onClick="pindahLauk_Cumi" />

                <ImageView
                    android:id="@+id/tempe_utama"
                    android:layout_width="203dp"
                    android:layout_height="203dp"
                    app:srcCompat="@drawable/tempe_utama"
                    android:onClick="pindahLauk_Tempe" />

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>